<div class="dashboard">
    <div class="title_container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar Pensamento</a>
    </div>

    <h3>Seus pensamentos</h3>
    <ul>
        {{#if thoughts}}
        {{#each thoughts}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="" class="btn">Editar</a>
                    <form action="/thoughts/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" name="id" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}

    </ul>
        {{else}}
            <p>Ainda não há nenhum pensamento seu, comece a criar <a href="/thoughts/add">por aqui.</a></p>
        {{/if}}
</div>